<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.heitaoc.springcloud.dao.StorageMapper">

    <update id="updateStorage">
        update storage_tbl set residue=residue-#{residue} where product_id=#{productId}
    </update>


</mapper>